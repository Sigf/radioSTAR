<body ng-app="myApp" ng-controller="MyController">
<% if user_signed_in? %>
     <div class="col-xs-12">
      <div class="col-xs-4"><%= Station.find(current_user.station_id).station_name %></div>
      <div class="container logo">
        <ul class="nav nav-tabs">
          <% @userShows.each do |x| %>
            <% playlist_count = 0 %>
