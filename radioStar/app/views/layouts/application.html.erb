<!DOCTYPE html>
<html>
<head>
  <title>RadioStar</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <!-- BOOTSTRAP ESSENTIALS -->
    <!-- Latest compiled and minified CSS -->
    <!-- <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> -->
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!-- END BOOTSTRAP ESSENTIALS -->
</head>
<body>
  <nav class="space-theme navbar navbar-default navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav navbar-nav">
          <li>
            <a class="navbar-brand" href="/" data-toggle="tooltip" data-placement="bottom" title="Statistical Tracking and Automated Review">RadioSTAR</a>
          </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse" id="mainMenu">
      <ul class="nav navbar-nav">
        <li class="<%= is_active(root_url) %>">
          <%= link_to "Home", root_url, :remote => true %>
        </li>
        <% if user_signed_in? && current_user.admin == true%>
          <li>
            <%= link_to "Manage", root_url, :remote => true %>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
          </li>
        <% else %>
          <li class="<%= is_active(new_user_session_path) %>">
            <%= link_to "Login", new_user_session_path %>
          </li>
          <li class="<%= is_active(new_user_registration_path) %>">
            <%= link_to "Sign Up", new_user_registration_path %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
<br><br><br>
<%= yield %>
</body>

</html>
