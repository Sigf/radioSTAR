<%= form_for (song) do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">
          <li><%= message %></li>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :playlist_id, :readonly => true %>
  </div>
    <div class="col-xs-4">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control"%>
    </div>
    <div class="col-xs-4">
      <%= f.label :artist %>
      <%= f.text_field :artist, :class => "form-control" %>
    </div>
  <div class="col-xs-4">
    <%= f.label :album %>
    <%= f.text_field :album, :class => "form-control" %>
  </div>
  <div class="col-xs-4">
    <%= f.label :label %>
    <%= f.text_field :label, :class => "form-control" %>
  </div>
  <div class="col-xs-4">
    <%= f.label :genre %>
    <%= f.text_field :genre, :class => "form-control", :placeholder => "EDM, Hip Hop, etc..." %>
  </div>
  <div class="col-xs-8">
    <%= f.label :time %><br>
    <%= f.datetime_select :time %>
  </div>
  <div class="actions col-xs-4">
    <%= f.button :submit => 'Create', :remote => true, :class => "btn btn-default btn-md"%>
  </div>
<% end %>
